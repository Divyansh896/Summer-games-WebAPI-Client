<Page
    x:Class="Summer_games_WebAPI_Client.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Summer_games_WebAPI_Client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:models="using:Summer_games_WebAPI_Client.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <Grid>
            <Grid.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="/Assets/sports-tools.jpg" Opacity="0.1"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>



            <StackPanel x:Name="AthletePanel" Grid.Row="0" Margin="30,25,0,0" Orientation="Horizontal" Spacing="25">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Filter Athletes By Sport:" Margin="10,10,0,0" VerticalAlignment="Center" FontSize="24" FontWeight="Bold"/>
                    <ComboBox x:Name="AthleteComboSportID"
                              VerticalAlignment="Stretch"
                              DisplayMemberPath="Name"
                              SelectionChanged="AthleteComboSportID_SelectionChanged"
                              Margin="10,10,0,0" PlaceholderText="All Sports" />     
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Filter Athletes By Contingent:" Margin="10,10,0,0" VerticalAlignment="Center" FontSize="24" FontWeight="Bold"/>
                    <ComboBox x:Name="AthleteComboContingentID"
                              VerticalAlignment="Stretch"
                              DisplayMemberPath="Name"
                              SelectionChanged="AthleteComboContingentID_SelectionChanged"
                              Margin="10,10,0,0" PlaceholderText="All Contingents" />         
                </StackPanel>
                <Button x:Name="btnRefresh" Content="Refresh" Margin="10,10,0,0"
                    Click="btnRefresh_Click" />

                <Button x:Name="btnAdd" Content="Add Athlete" 
		                RelativePanel.AlignHorizontalCenterWithPanel="True"
                        Click="btnAdd_Click" Margin="10,10,0,0" />

            </StackPanel>

            <GridView Name="athletesList" Margin="30,20,0,0" Grid.Row="1" ItemsSource="{Binding Athletes}" IsItemClickEnabled="True"
		ItemClick="athleteGridView_ItemClick">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="models:Athlete">
                        <Border BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="10" CornerRadius="10">
                            <StackPanel Margin="0,10,0,0" Width="350">
                                <!-- Full Name in Bold -->
                                <TextBlock Text="{x:Bind FullName}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>

                                <StackPanel Orientation="Vertical" Spacing="10" Margin="0,10,0,0">
                                    <!-- Age -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Age - " FontSize="14" FontWeight="Bold"/>
                                        <TextBlock Text="{x:Bind Age}" FontSize="14"/>
                                    </StackPanel>

                                    <!-- Athlete Code -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Athlete Code - " FontSize="14" FontWeight="Bold"/>
                                        <TextBlock Text="{x:Bind ACode}" FontSize="14"/>
                                    </StackPanel>

                                    <!-- Gender -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Gender - " FontSize="14" FontWeight="Bold"/>
                                        <TextBlock Text="{x:Bind Gender}" FontSize="14"/>
                                    </StackPanel>

                                    <!-- Height -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Height - " FontSize="14" FontWeight="Bold"/>
                                        <TextBlock Text="{x:Bind Height}" FontSize="14"/>
                                    </StackPanel>

                                    <!-- Weight -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Weight - " FontSize="14" FontWeight="Bold"/>
                                        <TextBlock Text="{x:Bind Weight}" FontSize="14"/>
                                    </StackPanel>

                                    <!-- Affiliation -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Affiliation - " FontSize="14" FontWeight="Bold"/>
                                        <TextBlock Text="{x:Bind Affiliation}" FontSize="14"/>
                                    </StackPanel>

                                    <!-- Date of Birth -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="DOB - " FontSize="14" FontWeight="Bold"/>
                                        <TextBlock Text="{x:Bind DOB}" FontSize="14"/>
                                    </StackPanel>

                                    <!-- Sport -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Sport - " FontSize="14" FontWeight="Bold"/>
                                        <TextBlock Text="{x:Bind Sport.Name}" FontSize="14"/>
                                    </StackPanel>

                                    <!-- Contingent -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Contingent - " FontSize="14" FontWeight="Bold"/>
                                        <TextBlock Text="{x:Bind Contingent.Name}" FontSize="14"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <ProgressRing x:Name="progRing" Grid.Row="1" Width="60" Height="60" />
            <RelativePanel Grid.Row="2"/>
        </Grid>
    </ScrollViewer>
</Page>
